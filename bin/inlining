#!/usr/bin/env node

"use strict";

var fs = require("fs");

var inlining = require("../index");

var html = process.argv[2];
var stdin;
var data = "";

if (html === "-") {
  stdin = process.openStdin();
  stdin.setEncoding("utf-8");
  stdin.on("data", function (chunk) {
    data += chunk;
  });
  stdin.on("end", function () {
    inlining(
      data,
      html,
      function (res) {
        console.log(res);
      }
    );
  });
} else {
  inlining(
    fs.readFileSync(html, "utf8"),
    html,
    function (res) {
      console.log(res);
    }
  );
}
